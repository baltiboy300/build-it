            <p className="text-slate-500 mt-3 font-medium">We're enhancing the {activeTab} experience for BuildIt-6c866 users.</p>
            <button onClick={() => setActiveTab('dashboard')} className="mt-8 px-8 py-3 bg-indigo-600 text-white rounded-2xl font-black shadow-lg">Back to Home</button>
          </div>
        )}
      </main>
    </div>
