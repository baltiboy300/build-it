            {announcements.length === 0 && <p className="text-xs text-slate-400 italic">No new announcements.</p>}
          </div>
        </Card>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card className="p-6">
          <div className="flex items-center justify-between mb-6">
            <h3 className="font-bold text-slate-800 flex items-center gap-2"><Clock size={18} className="text-slate-400" /> Tasks</h3>
            <button className="text-sm text-indigo-600 font-bold hover:underline">View All</button>
          </div>
          <div className="space-y-3">
            {[1, 2].map(i => (
              <div key={i} className="flex items-center justify-between p-3 bg-slate-50 rounded-xl border">
                <div className="flex items-center gap-3">
                  <FileText size={18} className="text-slate-400" />
                  <div><p className="text-sm font-bold text-slate-800">Assignment {i}</p><p className="text-xs text-slate-500">Due in {i+2} days</p></div>
                </div>
                <span className="text-[10px] font-bold bg-slate-100 px-2 py-1 rounded text-slate-600 uppercase">Pending</span>
              </div>
