// Override with environment config if available, otherwise use the integrated one
const finalConfig = typeof __firebase_config !== 'undefined' 
  ? JSON.parse(__firebase_config) 
  : firebaseConfig;

const app = initializeApp(finalConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'buildit-unipath';

/**
 * SHARED UI COMPONENTS
 */
const Card = ({ children, className = "" }) => (
  <div className={`bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden ${className}`}>{children}</div>
);

const Button = ({ children, onClick, variant = "primary", className = "", disabled = false }) => {
  const variants = {
    primary: "bg-indigo-600 text-white hover:bg-indigo-700 shadow-indigo-100",
    outline: "border border-slate-200 text-slate-700 hover:bg-slate-50",
    ghost: "text-slate-500 hover:bg-slate-100",
    secondary: "bg-slate-100 text-slate-900 hover:bg-slate-200",
    danger: "bg-red-50 text-red-600 hover:bg-red-100"
  };
  return (
    <button 
      disabled={disabled}
      onClick={onClick} 
      className={`px-4 py-2 rounded-lg font-medium transition-all flex items-center justify-center gap-2 disabled:opacity-50 ${variants[variant]} ${className}`}
    >
      {children}
    </button>
  );
};

const CustomTabs = ({ defaultValue, children }) => {
  const [activeTab, setActiveTab] = useState(defaultValue);
  return (
    <div className="space-y-6">
      <div className="flex bg-slate-100 p-1 rounded-xl w-fit border border-slate-200">
        {React.Children.map(children, child => {
          if (child?.type === TabTrigger) {
            return React.cloneElement(child, { activeTab, setActiveTab });
          }
          return null;
        })}
      </div>
      {React.Children.map(children, child => {
        if (child?.type === TabContent && child.props.value === activeTab) {
          return child;
        }
        return null;
      })}
    </div>
  );
};

const TabTrigger = ({ value, children, activeTab, setActiveTab }) => (
  <button
    onClick={() => setActiveTab(value)}
    className={`px-6 py-2 rounded-lg text-sm font-bold transition-all ${
      activeTab === value ? "bg-white text-indigo-600 shadow-sm" : "text-slate-500 hover:text-slate-700"
    }`}
  >
    {children}
  </button>
);

const TabContent = ({ children }) => <div className="animate-in fade-in slide-in-from-bottom-2 duration-300">{children}</div>;

/**
 * MENTOR DASHBOARD VIEW
 */
const MentorDashboard = ({ user, profileData, onLogout }) => {
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [announcement, setAnnouncement] = useState("");
  const [announcements, setAnnouncements] = useState([]);
  const [requests, setRequests] = useState([]);

  useEffect(() => {
    if (!user) return;
    
    // Fetch Public Announcements
    const annCol = collection(db, 'artifacts', appId, 'public', 'data', 'announcements');
    const unsubAnn = onSnapshot(annCol, (snap) => {
      const data = snap.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setAnnouncements(data.sort((a, b) => (b.createdAt?.seconds || 0) - (a.createdAt?.seconds || 0)));
    }, (err) => console.error("Announcement error:", err));

    // Fetch Incoming Mentor Requests
    const reqCol = collection(db, 'artifacts', appId, 'public', 'data', 'requests');
    const unsubReq = onSnapshot(reqCol, (snap) => {
      const data = snap.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      // In a real app, we'd use a server-side filter, but per Rule 2, we filter in memory
      setRequests(data.filter(r => r.mentorId === user.uid));
    }, (err) => console.error("Request error:", err));

    return () => { unsubAnn(); unsubReq(); };
  }, [user]);

  const handlePost = async () => {
    if (!announcement.trim() || !user) return;
    try {
      await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'announcements'), {
        content: announcement,
        authorId: user.uid,
        authorName: profileData?.name || 'Mentor',
        createdAt: serverTimestamp(),
        date: new Date().toLocaleDateString()
      });
      setAnnouncement("");
      setIsModalOpen(false);
    } catch (e) { console.error(e); }
  };

  return (
    <div className="min-h-screen bg-slate-50 flex w-full font-sans">
      <aside className="w-64 bg-white border-r border-slate-200 hidden lg:flex flex-col shrink-0">
        <div className="p-6">
          <div className="flex items-center gap-3 text-indigo-600 font-bold text-xl">
            <UserCheck className="w-8 h-8" />
            <span>IILM Portal</span>
          </div>
        </div>
        <nav className="flex-1 px-4 space-y-1">
          <div className="flex items-center gap-3 px-4 py-3 bg-indigo-50 text-indigo-600 rounded-lg font-bold cursor-pointer">
            <LayoutDashboard className="w-5 h-5" /> Dashboard
          </div>
          <div className="flex items-center gap-3 px-4 py-3 text-slate-500 hover:bg-slate-50 rounded-lg font-medium cursor-pointer">
            <Users className="w-5 h-5" /> My Mentees
          </div>
          <div className="flex items-center gap-3 px-4 py-3 text-slate-500 hover:bg-slate-50 rounded-lg font-medium cursor-pointer">
            <MessageSquare className="w-5 h-5" /> Messages
          </div>
        </nav>
        <div className="p-4 border-t">
          <div onClick={onLogout} className="flex items-center gap-3 px-4 py-3 text-red-500 font-medium cursor-pointer hover:bg-red-50 rounded-lg transition-colors">
            <LogOut className="w-5 h-5" /> Logout
          </div>
        </div>
      </aside>

      <div className="flex-1 flex flex-col min-w-0 overflow-hidden">
        <header className="h-20 bg-white border-b border-slate-200 flex items-center justify-between px-8 shrink-0">
          <h2 className="text-xl font-bold text-slate-800">Mentor Console</h2>
          <div className="flex items-center gap-4">
            <div className="text-right hidden sm:block">
              <p className="text-sm font-bold text-slate-900">{profileData?.name}</p>
              <p className="text-xs text-slate-500 font-medium">{profileData?.title}</p>
            </div>
            <div className="w-10 h-10 rounded-full bg-indigo-600 text-white flex items-center justify-center font-bold border-2 border-indigo-100 uppercase">
              {profileData?.name?.[0]}
            </div>
          </div>
        </header>

        <main className="flex-1 overflow-y-auto p-8">
          <div className="max-w-5xl mx-auto space-y-8">
            <div className="flex flex-col md:flex-row md:items-center justify-between gap-4">
              <div>
                <h1 className="text-3xl font-extrabold text-slate-900 tracking-tight">Faculty Dashboard</h1>
                <p className="text-slate-500 mt-1 font-medium">Broadcast news and manage mentee interactions.</p>
              </div>
              <Button onClick={() => setIsModalOpen(true)} className="h-12 px-6 shadow-lg shadow-indigo-200">
                <Megaphone className="w-5 h-5" /> Create Announcement
              </Button>
            </div>

            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
              <Card className="p-6">
                <div className="flex justify-between items-start">
                  <div><p className="text-slate-400 text-xs font-bold uppercase tracking-widest">Mentees</p><h3 className="text-3xl font-black text-slate-900 mt-1">12</h3></div>
                  <div className="p-3 rounded-xl bg-indigo-600 text-white shadow-lg"><Users className="w-6 h-6" /></div>
                </div>
              </Card>
              <Card className="p-6">
                <div className="flex justify-between items-start">
                  <div><p className="text-slate-400 text-xs font-bold uppercase tracking-widest">New Requests</p><h3 className="text-3xl font-black text-slate-900 mt-1">{requests.length}</h3></div>
                  <div className="p-3 rounded-xl bg-amber-500 text-white shadow-lg"><Bell className="w-6 h-6" /></div>
                </div>
              </Card>
              <Card className="p-6">
                <div className="flex justify-between items-start">
                  <div><p className="text-slate-400 text-xs font-bold uppercase tracking-widest">Broadcasts</p><h3 className="text-3xl font-black text-slate-900 mt-1">{announcements.length}</h3></div>
                  <div className="p-3 rounded-xl bg-emerald-500 text-white shadow-lg"><Megaphone className="w-6 h-6" /></div>
                </div>
              </Card>
            </div>

            <CustomTabs defaultValue="announcements">
              <TabTrigger value="requests">Student Requests</TabTrigger>
              <TabTrigger value="announcements">Past Broadcasts</TabTrigger>
              <TabContent value="announcements">
                <div className="space-y-4">
                  {announcements.length === 0 ? (
                    <div className="text-center py-12 text-slate-400">No announcements yet.</div>
                  ) : announcements.map(ann => (
                    <Card key={ann.id} className="p-0 flex">
                      <div className="w-2 bg-indigo-600"></div>
                      <div className="p-6 flex-1">
                        <div className="flex justify-between items-start mb-2">
                          <span className="text-[10px] font-black text-indigo-600 uppercase tracking-widest">Broadcast</span>
                          <span className="text-[10px] font-bold text-slate-400">{ann.date}</span>
                        </div>
                        <p className="text-slate-700 leading-relaxed font-medium">{ann.content}</p>
                      </div>
                    </Card>
                  ))}
                </div>
              </TabContent>
              <TabContent value="requests">
                <div className="grid gap-4">
                  {requests.length === 0 ? (
                    <div className="text-center py-12 text-slate-400">No pending requests.</div>
                  ) : requests.map(req => (
                    <Card key={req.id} className="p-6">
                      <div className="flex justify-between items-start mb-4">
                        <div className="flex items-center gap-3">
                          <div className="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center font-bold text-slate-500 uppercase">{req.menteeName?.[0]}</div>
                          <div><h4 className="font-bold text-slate-900 text-lg">{req.menteeName}</h4><p className="text-sm text-slate-500">{req.menteeInfo}</p></div>
                        </div>
                      </div>
                      <p className="text-sm text-slate-600 italic mb-4">"{req.message}"</p>
                      <div className="flex gap-3">
                        <Button className="flex-1 bg-emerald-600">Approve</Button>
                        <Button variant="outline" className="flex-1 text-red-500">Ignore</Button>
                      </div>
                    </Card>
                  ))}
                </div>
              </TabContent>
            </CustomTabs>
          </div>
        </main>
      </div>

      {isModalOpen && (
        <div className="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
          <Card className="w-full max-w-lg shadow-2xl border-none p-6">
            <h3 className="text-xl font-bold mb-4">New Broadcast</h3>
            <textarea 
              className="w-full min-h-[160px] p-4 bg-slate-50 border rounded-2xl outline-none mb-4 focus:ring-2 focus:ring-indigo-500" 
              placeholder="Type your message to all mentees..." 
              value={announcement} 
              onChange={(e) => setAnnouncement(e.target.value)} 
            />
            <div className="flex justify-end gap-2">
              <Button variant="ghost" onClick={() => setIsModalOpen(false)}>Cancel</Button>
              <Button onClick={handlePost}>Publish</Button>
            </div>
          </Card>
        </div>
      )}
    </div>
  );
};

/**
 * MENTEE DASHBOARD VIEW
 */
const MenteeDashboard = ({ user, profileData, onLogout }) => {
  const [activeTab, setActiveTab] = useState('dashboard');
  const [announcements, setAnnouncements] = useState([]);

  useEffect(() => {
    if (!user) return;
    const annCol = collection(db, 'artifacts', appId, 'public', 'data', 'announcements');
    const unsub = onSnapshot(annCol, (snap) => {
      const data = snap.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      setAnnouncements(data.sort((a, b) => (b.createdAt?.seconds || 0) - (a.createdAt?.seconds || 0)));
    }, (err) => console.error(err));
    return () => unsub();
  }, [user]);

  const SidebarItem = ({ id, icon: Icon, label }) => (
    <button
      onClick={() => setActiveTab(id)}
