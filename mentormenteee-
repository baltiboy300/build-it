      Submitted: 'bg-green-100 text-green-700', Overdue: 'bg-rose-100 text-rose-700'
    };
    return <span className={`px-2 py-0.5 rounded-full text-[10px] font-bold uppercase ${colors[type] || 'bg-gray-100 text-gray-700'}`}>{children}</span>;
  };

  const renderDashboard = () => (
    <div className="space-y-6 animate-in fade-in duration-500">
      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div className="bg-gradient-to-br from-indigo-600 to-indigo-800 p-8 rounded-2xl text-white shadow-xl lg:col-span-2 relative overflow-hidden">
          <div className="relative z-10">
            <h2 className="text-3xl font-bold mb-2">Welcome back, {profileData?.name?.split(' ')[0] || 'Student'}!</h2>
            <p className="text-indigo-100 mb-6 max-w-md">You have upcoming assignments and mentorship sessions. Stay updated with your portal.</p>
            <button className="bg-white text-indigo-700 px-5 py-2.5 rounded-xl font-bold hover:bg-indigo-50 transition-colors shadow-lg">View Schedule</button>
          </div>
          <GraduationCap className="absolute -right-8 -bottom-8 w-64 h-64 text-white/10 rotate-12" />
