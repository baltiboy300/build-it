/**
 * ROOT APP COMPONENT
 */
const App = () => {
  const [user, setUser] = useState(null);
  const [role, setRole] = useState(null); 
  const [isVerified, setIsVerified] = useState(false);
  const [loading, setLoading] = useState(true);
  const [profileData, setProfileData] = useState(null);

  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (err) { console.error("Authentication integration failed:", err); }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, (u) => {
      setUser(u);
      setLoading(false);
    });
    return () => unsubscribe();
  }, []);

  // Phone Email verification listener
  useEffect(() => {
    window.phoneEmailReceiver = (userObj) => { setIsVerified(true); };
    return () => delete window.phoneEmailReceiver;
  }, []);

  // Inject Phone Email script for verification
  useEffect(() => {
    if (role && !isVerified) {
      const existingScript = document.getElementById('phone-email-script');
      if (!existingScript) {
        const script = document.createElement('script');
        script.id = 'phone-email-script';
        script.src = "https://www.phone.email/verify_email_v1.js";
        script.async = true;
        document.body.appendChild(script);
      }
    }
  }, [role, isVerified]);

  useEffect(() => {
    if (!user || !role || !isVerified) return;
    
    const userDocRef = doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info');
    const fetchProfile = async () => {
      try {
        const snap = await getDoc(userDocRef);
        if (snap.exists()) {
          setProfileData(snap.data());
        } else {
          const newData = {
            uid: user.uid,
            role: role,
            name: role === 'mentor' ? 'Dr. Vikram Seth' : 'Aarav Gupta',
            email: 'user@buildit.edu',
            title: role === 'mentor' ? 'Department Head' : 'Junior Student',
            createdAt: serverTimestamp()
          };
          await setDoc(userDocRef, newData);
          setProfileData(newData);
        }
      } catch (e) { console.error("Profile sync error:", e); }
    };
    fetchProfile();
  }, [user, role, isVerified]);

  const handleLogout = () => {
    setRole(null);
    setIsVerified(false);
    setProfileData(null);
  };

  if (loading) return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-slate-50">
      <div className="animate-spin rounded-full h-10 w-10 border-t-2 border-indigo-600 mb-4"></div>
      <p className="text-slate-400 font-bold text-xs uppercase tracking-widest">Initializing BuildIt Cloud</p>
    </div>
  );

  if (user && role && isVerified) {
    return role === 'mentor' ? (
      <MentorDashboard user={user} profileData={profileData} onLogout={handleLogout} />
    ) : (
      <MenteeDashboard user={user} profileData={profileData} onLogout={handleLogout} />
    );
  }

  return (
    <div className="min-h-screen flex items-center justify-center bg-slate-100 p-4 font-sans">
      <div className="max-w-4xl w-full bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row min-h-[600px]">
        <div className="md:w-1/2 bg-indigo-600 p-12 text-white flex flex-col justify-center">
          <div className="bg-white/20 w-16 h-16 rounded-2xl flex items-center justify-center mb-6"><GraduationCap size={40} /></div>
          <h1 className="text-4xl font-black mb-4 leading-tight">UniPath Academic</h1>
          <p className="text-indigo-100 text-lg opacity-90">Securely connected via BuildIt-6c866 Firebase.</p>
          <div className="mt-8 pt-8 border-t border-white/20">
             <div className="flex items-center gap-3 text-sm font-bold"><ShieldCheck size={18} /> Verified Institution Portal</div>
          </div>
        </div>
        <div className="md:w-1/2 p-12 flex flex-col justify-center bg-white">
          {!role ? (
            <div className="space-y-8">
              <div className="text-center">
                <h2 className="text-2xl font-black text-slate-800">Welcome Back</h2>
                <p className="text-slate-500 font-medium">Select your portal role</p>
              </div>
              <div className="space-y-4">
                <button onClick={() => setRole('mentor')} className="w-full flex items-center gap-4 p-5 border-2 border-slate-100 rounded-2xl hover:border-indigo-600 hover:bg-indigo-50 transition-all text-left group">
                  <div className="bg-indigo-100 p-3 rounded-xl text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white"><Briefcase /></div>
                  <div><div className="font-black text-slate-800">Faculty Login</div><div className="text-xs text-slate-400 font-bold">Manage Mentees</div></div>
                </button>
                <button onClick={() => setRole('mentee')} className="w-full flex items-center gap-4 p-5 border-2 border-slate-100 rounded-2xl hover:border-emerald-600 hover:bg-emerald-50 transition-all text-left group">
                  <div className="bg-emerald-100 p-3 rounded-xl text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white"><BookOpen /></div>
                  <div><div className="font-black text-slate-800">Student Login</div><div className="text-xs text-slate-400 font-bold">Academic Tracking</div></div>
                </button>
              </div>
            </div>
          ) : (
            <div className="text-center animate-in fade-in slide-in-from-bottom-4">
              <button onClick={() => setRole(null)} className="text-indigo-600 font-bold text-sm mb-6 flex items-center gap-2 justify-center mx-auto hover:underline">‚Üê Change Role</button>
              <h2 className="text-2xl font-black text-slate-800 mb-2 capitalize">{role} Verification</h2>
              <div className="flex justify-center mb-8">
                <div className="pe_verify_email shadow-lg rounded-xl overflow-hidden" data-client-id="13401266232106403409"></div>
              </div>
              <div className="flex items-center gap-2 justify-center text-[10px] text-slate-400 font-bold uppercase tracking-widest"><ShieldCheck size={14} /> Firebase Project: buildit-6c866</div>
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

export default App;
