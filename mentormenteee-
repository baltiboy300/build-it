        </div>
      </div>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {mentors.filter(m => m.name.toLowerCase().includes(searchQuery.toLowerCase()) || m.expertise.some(e => e.toLowerCase().includes(searchQuery.toLowerCase()))).map(mentor => (
          <Card key={mentor.id} className="p-6 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div className="flex items-start justify-between mb-4">
              <div className="w-14 h-14 bg-indigo-100 text-indigo-700 rounded-2xl flex items-center justify-center font-bold text-xl uppercase">{mentor.name[0]}{mentor.name.split(' ')[1]?.[0]}</div>
              <div className="flex items-center gap-1 bg-amber-50 text-amber-700 px-2 py-1 rounded-lg text-xs font-bold border border-amber-100">★ {mentor.rating}</div>
            </div>
            <h3 className="font-bold text-slate-800 text-lg">{mentor.name}</h3>
            <p className="text-sm text-indigo-600 font-semibold mb-1">{mentor.role}</p>
            <p className="text-xs text-slate-500 mb-4">{mentor.department}</p>
            <div className="flex flex-wrap gap-2 mb-6">{mentor.expertise.map(skill => <span key={skill} className="px-2 py-1 bg-slate-50 text-slate-600 rounded-lg text-[10px] uppercase font-bold tracking-wider border border-slate-100">{skill}</span>)}</div>
            <button className="w-full py-3 bg-slate-900 text-white rounded-xl font-bold hover:bg-indigo-600 transition-colors flex items-center justify-center gap-2 group">Request Guidance <ChevronRight size={16} className="group-hover:translate-x-1 transition-transform" /></button>
          </Card>
        ))}
      </div>
    </div>
  );

  const renderAcademicHub = () => (
    <div className="space-y-6 animate-in slide-in-from-right-4 duration-500">
      <div className="flex items-center justify-between"><h2 className="text-2xl font-bold text-slate-800">Academic Hub</h2><button className="px-5 py-2 bg-indigo-600 text-white rounded-xl text-sm font-bold shadow-lg shadow-indigo-200">Submit Assignment</button></div>
      <Card className="overflow-hidden">
        <div className="overflow-x-auto">
          <table className="w-full text-left">
            <thead>
              <tr className="bg-slate-50 border-b border-slate-100">
                <th className="px-6 py-4 text-xs font-bold text-slate-500 uppercase">Assignment</th>
                <th className="px-6 py-4 text-xs font-bold text-slate-500 uppercase">Course</th>
                <th className="px-6 py-4 text-xs font-bold text-slate-500 uppercase">Due Date</th>
                <th className="px-6 py-4 text-xs font-bold text-slate-500 uppercase">Status</th>
              </tr>
            </thead>
            <tbody className="divide-y divide-slate-50">
              {assignments.map(item => (
                <tr key={item.id} className="hover:bg-indigo-50/30 transition-colors group">
                  <td className="px-6 py-4 flex items-center gap-3"><FileText size={18} className="text-slate-400 group-hover:text-indigo-600" /><span className="font-bold text-slate-800">{item.title}</span></td>
                  <td className="px-6 py-4 text-sm font-medium">{item.course}</td>
                  <td className="px-6 py-4 text-sm">{item.dueDate}</td>
                  <td className="px-6 py-4"><Badge type={item.status}>{item.status}</Badge></td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </Card>
    </div>
  );

  return (
    <div className="min-h-screen bg-slate-50 flex flex-col md:flex-row w-full font-sans antialiased">
      <nav className="hidden md:flex flex-col w-64 bg-white border-r border-slate-200 p-6 space-y-8 h-screen sticky top-0 shrink-0">
        <div className="flex items-center gap-3 px-2">
          <div className="bg-indigo-600 p-2 rounded-xl shadow-indigo-200 shadow-xl"><GraduationCap className="text-white" size={24} /></div>
          <span className="font-black text-2xl tracking-tighter text-slate-800">UniPath</span>
        </div>
        <div className="space-y-1">
          <SidebarItem id="dashboard" icon={LayoutDashboard} label="Dashboard" />
          <SidebarItem id="mentorship" icon={Users} label="Mentorship" />
          <SidebarItem id="academic" icon={BookOpen} label="Academic Hub" />
          <SidebarItem id="career" icon={Briefcase} label="Career Hub" />
          <SidebarItem id="messages" icon={MessageSquare} label="Messages" />
        </div>
        <div className="mt-auto pt-6 border-t border-slate-100 flex flex-col gap-4">
          <div className="flex items-center gap-3 p-2 bg-slate-50 rounded-xl border border-slate-100">
            <div className="w-10 h-10 rounded-full bg-indigo-600 text-white flex items-center justify-center font-bold text-sm uppercase">{profileData?.name?.[0]}</div>
            <div><p className="text-xs font-black text-slate-800">{profileData?.name}</p><p className="text-[10px] font-bold text-slate-400 uppercase">Year 3 Student</p></div>
          </div>
          <button onClick={onLogout} className="flex items-center gap-3 px-4 py-3 text-red-500 font-medium hover:bg-red-50 rounded-lg transition-colors"><LogOut size={18} /> Logout</button>
        </div>
      </nav>

      <main className="flex-1 p-6 md:p-10 w-full overflow-y-auto">
        <div className="hidden md:flex items-center justify-between mb-10">
          <div className="flex items-center gap-4 text-[10px] uppercase tracking-widest text-slate-400 font-bold"><span>Home</span><ChevronRight size={14} className="text-slate-300" /><span className="text-indigo-600">{activeTab}</span></div>
          <div className="flex items-center gap-6">
             <div className="relative group cursor-pointer"><Bell size={22} className="text-slate-400 group-hover:text-indigo-600" /><span className="absolute -top-1.5 -right-1.5 w-4 h-4 bg-rose-500 border-2 border-white rounded-full text-[9px] text-white flex items-center justify-center font-black">3</span></div>
             <div className="flex items-center gap-3 bg-white px-4 py-2.5 rounded-xl shadow-sm border border-slate-100"><Calendar size={18} className="text-indigo-600" /><span className="text-xs font-black text-slate-700 uppercase">May 12, 2024</span></div>
          </div>
        </div>
        {activeTab === 'dashboard' && renderDashboard()}
        {activeTab === 'mentorship' && renderMentorship()}
        {activeTab === 'academic' && renderAcademicHub()}
        {(activeTab === 'career' || activeTab === 'messages') && (
          <div className="bg-white rounded-3xl shadow-sm border border-slate-100 h-[500px] flex items-center justify-center flex-col text-center p-10 animate-in zoom-in-95 duration-300">
             <div className="w-24 h-24 bg-indigo-50 rounded-full flex items-center justify-center mb-6 shadow-inner ring-4 ring-white"><MessageSquare size={48} className="text-indigo-300" /></div>
             <h3 className="text-2xl font-black text-slate-800">Feature Coming Soon</h3>
             <p className="text-slate-500 max-w-sm mt-3 font-medium">We're building the best-in-class {activeTab} experience for students.</p>
             <button onClick={() => setActiveTab('dashboard')} className="mt-8 px-8 py-3 bg-indigo-600 text-white rounded-2xl font-black shadow-lg hover:bg-indigo-700 transition-all">Back to Dashboard</button>
          </div>
        )}
      </main>
    </div>
  );
};

/**
 * ROOT COMPONENT
 */
const App = () => {
  const [user, setUser] = useState(null);
  const [role, setRole] = useState(null); 
  const [isVerified, setIsVerified] = useState(false);
  const [loading, setLoading] = useState(true);
  const [profileData, setProfileData] = useState(null);

  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (err) { console.error("Auth error:", err); }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, (u) => {
      setUser(u);
      setLoading(false);
    });
    return () => unsubscribe();
  }, []);

  useEffect(() => {
    window.phoneEmailReceiver = (userObj) => { setIsVerified(true); };
    return () => delete window.phoneEmailReceiver;
  }, []);

  useEffect(() => {
    if (role && !isVerified) {
      const timer = setTimeout(() => {
        const existingScript = document.getElementById('phone-email-script');
        if (!existingScript) {
          const script = document.createElement('script');
          script.id = 'phone-email-script';
          script.src = "https://www.phone.email/verify_email_v1.js";
          script.async = true;
          document.body.appendChild(script);
        }
      }, 100);
      return () => clearTimeout(timer);
    }
  }, [role, isVerified]);

  useEffect(() => {
    if (!user || !role || !isVerified) return;
    const userDocRef = doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info');
    const fetchProfile = async () => {
      const snap = await getDoc(userDocRef);
      if (snap.exists()) {
        setProfileData(snap.data());
      } else {
        const newData = {
          uid: user.uid,
          role: role,
          name: role === 'mentor' ? 'Dr. Rajesh Sharma' : 'Aryan Malhotra',
          email: 'verified@iilm.edu',
          title: role === 'mentor' ? 'Senior Professor, CSE' : 'B.Tech Student',
          createdAt: serverTimestamp()
        };
        await setDoc(userDocRef, newData);
        setProfileData(newData);
      }
    };
    fetchProfile();
  }, [user, role, isVerified]);

  const handleRoleSelection = (selectedRole) => {
    setRole(selectedRole);
  };

  const handleLogout = () => {
    setRole(null);
    setIsVerified(false);
    setProfileData(null);
    const existingScript = document.getElementById('phone-email-script');
    if (existingScript) existingScript.remove();
  };

  if (loading) return (
    <div className="flex items-center justify-center min-h-screen bg-slate-50">
      <div className="animate-spin rounded-full h-8 w-8 border-t-2 border-indigo-600"></div>
    </div>
  );

  if (user && role && isVerified) {
    return role === 'mentor' ? (
      <MentorDashboard user={user} profileData={profileData} onLogout={handleLogout} />
    ) : (
      <MenteeDashboard user={user} profileData={profileData} onLogout={handleLogout} />
    );
  }

  return (
    <div className="min-h-screen flex items-center justify-center bg-slate-100 p-4 font-sans antialiased">
      <div className="max-w-4xl w-full bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row min-h-[550px]">
        <div className="md:w-1/2 bg-indigo-600 p-12 text-white flex flex-col justify-center">
          <div className="bg-white/20 w-16 h-16 rounded-2xl flex items-center justify-center mb-6"><GraduationCap size={40} /></div>
          <h1 className="text-4xl font-black mb-4 leading-tight">IILM Academic Portal</h1>
          <p className="text-indigo-100 text-lg opacity-90">Unlock personalized mentorship and track your academic journey in one secure platform.</p>
        </div>
        <div className="md:w-1/2 p-12 flex flex-col justify-center bg-white">
          {!role ? (
            <div className="space-y-8">
              <div className="text-center">
                <h2 className="text-2xl font-black text-slate-800">Welcome Back</h2>
                <p className="text-slate-500 font-medium">Please choose your account type</p>
              </div>
              <div className="space-y-4">
                <button onClick={() => handleRoleSelection('mentor')} className="w-full flex items-center gap-4 p-5 border-2 border-slate-100 rounded-2xl hover:border-indigo-600 hover:bg-indigo-50 transition-all text-left group">
                  <div className="bg-indigo-100 p-3 rounded-xl text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors"><Briefcase /></div>
                  <div><div className="font-black text-slate-800">Mentor Portal</div><div className="text-xs text-slate-400 font-bold uppercase tracking-wider">Faculty & Experts</div></div>
                </button>
                <button onClick={() => handleRoleSelection('mentee')} className="w-full flex items-center gap-4 p-5 border-2 border-slate-100 rounded-2xl hover:border-emerald-600 hover:bg-emerald-50 transition-all text-left group">
                  <div className="bg-emerald-100 p-3 rounded-xl text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-colors"><BookOpen /></div>
                  <div><div className="font-black text-slate-800">Mentee Portal</div><div className="text-xs text-slate-400 font-bold uppercase tracking-wider">Students & Learners</div></div>
                </button>
              </div>
            </div>
          ) : (
            <div className="text-center animate-in fade-in slide-in-from-bottom-4">
              <button onClick={() => setRole(null)} className="text-indigo-600 font-bold text-sm mb-6 flex items-center gap-2 justify-center mx-auto hover:underline">← Change Role</button>
              <h2 className="text-2xl font-black text-slate-800 mb-2 capitalize">{role} Login</h2>
              <div className="flex justify-center mb-8">
                <div className="pe_verify_email shadow-lg rounded-xl overflow-hidden" data-client-id="13401266232106403409"></div>
              </div>
              <div className="flex items-center gap-2 justify-center text-[10px] text-slate-400 font-bold uppercase tracking-widest"><ShieldCheck size={14} /> Secure Authentication Environment</div>
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

export default App;
